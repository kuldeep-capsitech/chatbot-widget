{
  "name": "chatbot",
  "version": "0.1.0",
  "description": "",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "umd:main": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--openssl-legacy-provider preact watch",
    "build:widget": "microbundle build src/index.ts --jsxImportSource preact --format modern,umd --external none --define process.env.NODE_ENV=production",
    "build:lib": "microbundle build src/index.ts --jsxImportSource preact --format esm,cjs",
    "lint": "eslint '{src,tests}/**/*.{ts,tsx}'",
    "test": "jest",
    "build": "npm run build:widget && npm run build:lib",
    "start": "npm run dev"
  },
  "files": [
    "dist"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ]
  },
  "author": "Tushar Chakraborty",
  "license": "MIT",
  "dependencies": {
    "preact": "10.5.7"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-preact": "^1.1.3",
    "jest": "^27.3.1",
    "jest-preset-preact": "^4.0.2",
    "microbundle": "^0.14.1",
    "preact-cli": "^3.0.5",
    "preact-habitat": "^3.3.0",
    "preact-render-to-string": "^5.1.11",
    "typescript": "^4.1.3",
    "cross-env": "^7.0.3"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
